    var focusAction = function () {
        $('html, body').animate({
            scrollTop: $('#contentBlock').offset().top - 200
        }, 500);
    }

    var ajaxLoading = function (content) {
        focusAction();
        $('#' + content + '').append("<div id='ajax-loading-overlay'><div class='ajax-loader'></div></div>");
    }


</script>
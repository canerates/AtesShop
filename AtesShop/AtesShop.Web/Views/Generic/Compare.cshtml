@{
    ViewBag.Title = AtesShop.Resources.Resources.Compare;
}
<!-- Breadcrumb Start -->
<div class="breadcrumb-area ptb-60 ptb-sm-30">
    <div class="container">
        <div class="breadcrumb">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">@AtesShop.Resources.Resources.HomeT1O1</a></li>
                <li class="active"><a href="@Url.Action("Compare", "Generic")">@AtesShop.Resources.Resources.Compare</a></li>
            </ul>
        </div>
    </div>
    <!-- Container End -->
</div>
<!-- Breadcrumb End -->
<div class="compare-product pb-40">
    <div class="container">
        <div id="compareContainer">
            @{
                Html.RenderAction("CompareProducts");
            }
        </div>
    </div>
</div>

<script>
    var focusAction = function () {
        $('html, body').animate({
            scrollTop: $('#compareContainer').offset().top - 200
        }, 500);
    }

    var ajaxLoading = function () {
        $("#compareContainer").append("<div id='ajax-loading-overlay'><div class='ajax-loader'></div></div>");
    }

    
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
                                        @if (Culture == "zh-TW" && (User.IsInRole("User") || !Request.IsAuthenticated))
                                        {
                                            <a href="@Url.Action("Cart", "Shop")"><i class="fa fa-shopping-basket"></i><span id="cartProductQuantity" class="cart-counter">0</span></a>
                                        }
                                        @*@{ Html.RenderAction("CartMenu", "Shared");}*@
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- Cartt Box End -->
                        @{ Html.RenderAction("MobileMenu", "Shared");}
                        <!-- Mobile Menu  End -->
                    </div>
                    <!-- Row End -->
                </div>
                <!-- Container End -->
            </div>
            <!-- Header Bottom End -->
        </header>

                        </div>
                        <!-- Header Top left End -->
                        <!-- Search Box Start -->
                        <div class="col-lg-4 col-md-6 ml-auto mr-auto">
                            <div class="search-box-view">
                                <form id="searchForm" action="@Url.Action("Index", "Products" , new { categoryId = string.Empty })">
                                    <input id="searchKey" type="text" class="email" placeholder="@AtesShop.Resources.Resources.SearchYourProduct" name="search" required>
                                    <button type="submit" class="submit"></button>
                                </form>
                            </div>
                        </div>
                        <!-- Search Box End -->
                        <!-- Header Top Right Start -->
                        <div class="col-lg-4 col-md-12">
                            <div class="header-top-right">
                                <ul class="header-list-menu f-right">

                            </div>
                        </div>
                        <!-- Primary Vertical-Menu End -->
                        <!-- Search Box Start -->
                        @{ Html.RenderAction("MenuTabs", "Shared");}
                        <!-- Search Box End -->
                        <!-- Cartt Box Start -->
                        <div class="col-lg-2 col-sm-7 col-7">
                            <div class="cart-box text-right">
                                <ul>
                                    <li>
                                        @Html.Partial("_LoginPartial")

@model AtesShop.Admin.Models.RoleViewModel
   

<div class="container">
    <div class="page-header">
        <h2>Edit Role</h2>
    </div>
</div>


<div class="container">
    <form id="editRole" class="form-horizontal">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label class="control-label col-sm-2">Role Name</label>
            <div class="col-sm-10">
                <input class="form-control" name="Name" value="@Model.Name" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="updateBtn" class="btn btn-success" type="button">Update</button>
            </div>
        </div>
    </form>
</div>


<script>

    $("#updateBtn").click(function () {
        $.ajax({
            type: 'POST',
            url: '/Role/Edit',
            data: $("#editRole").serialize()
        })
        .done(function (response) {
            //alert("Success");
            $("#tableContainer").html(response);
            $("#actionContainer").html("");
            focusAction("tableContainer");
        })
        .fail(function (XMLHttpRequest, testStatus, errorThrown) {
            //alert("Fail");
        });
    });

</script>
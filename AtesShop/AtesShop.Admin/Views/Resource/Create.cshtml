
@{
    ViewBag.Title = "Create";
}


<div class="container">
    <div class="page-header">
        <h2>Add Resource</h2>
    </div>
</div>

<div class="container">
    <form id="createResource" class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-sm-2">Culture (Lang.)</label>
            <div class="col-sm-10">
                <input class="form-control" name="Culture" value="en-us" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Resource Key</label>
            <div class="col-sm-10">
                <input class="form-control" name="Key" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Resource Value</label>
            <div class="col-sm-10">
                <input class="form-control" name="Value" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="saveBtn" class="btn btn-success" type="button">Save</button>
            </div>
        </div>

    </form>
</div>

<script>

    $("#saveBtn").click(function () {
        $.ajax({
            type: 'POST',
            url: '/Resource/Create',
            data: $("#createResource").serialize()
        })
        .done(function (response) {
            //alert("Success");
            $("#tableContainer").html(response);
            $("#actionContainer").html("");
            focusAction("tableContainer");
        })
        .fail(function (XMLHttpRequest, testStatus, errorThrown) {
            alert("Fail");
        });

    });

</script>
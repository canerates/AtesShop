@model MenuResourceViewModel
@{
    ViewBag.Title = "Edit Menu Translation";

}

<div class="container">
    <div class="page-header">
        <h2>Edit Menu Translation</h2>
    </div>
</div>

<div class="container">
    <form id="editMenuTranslation" class="form-horizontal">

        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="Type" value="@Model.Type" />

        <div class="form-group">
            <label class="control-label col-sm-2">Culture</label>
            <div class="col-sm-10">
                <input class="form-control" name="Culture" value="@Model.Culture" readonly />
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2">Product Name</label>
            <div class="col-sm-10">
                <input class="form-control" name="Name" value="@Model.Name" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="updateBtn" class="btn btn-success" type="button">Update</button>
            </div>
        </div>
    </form>
</div>
<script>

    $("#updateBtn").click(function () {
        $.ajax({
            type: 'POST',
            url: '/Menu/EditTranslation',
            data: $("#editMenuTranslation").serialize()
        })
        .done(function (response) {
            //alert("Success");
            $("#tableContainer").html(response);
            $("#actionContainer").html("");
            focusAction("tableContainer");
        })
        .fail(function (XMLHttpRequest, testStatus, errorThrown) {
            //alert("Fail");
        });

    });

</script>